<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Circle -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">

        <shape>

        <solid android:color="@android:color/transparent" />
        <stroke
            android:width="5dp"
            android:color="#44C8C8C8" />
        <corners android:radius="110dp" />
        <padding
            android:bottom="0dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp" />

    </shape>

    </item>

    <!-- Outside Circle -->
    <item>

        <shape>

            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="#000" />
            <corners android:radius="110dp" />

        </shape>

    </item>

</layer-list>